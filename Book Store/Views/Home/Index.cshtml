@model Book_Store.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    
    ViewData.Add("controllerName","Home");
    ViewData.Add("actionName","Index");
}
<div style="margin-top:20px;"></div>
<div class="col-md-3" id="sidebar">
    <ul class="list-group">
        @foreach (var item in Model.BookCategories)
        {
            <li class="list-group-item">
                @Html.ActionLink(item.Categoryname, "ViewCategory", "BookCategory", new {catId=item.Id },null)
            </li>
        }
    </ul>
</div>
<div class="col-md-9">
    <div class="row">
        <div class="slider" style="width:100%;height:300px;background:#ccc"></div>
    </div>
    <div class="row">
        @foreach (var cat in Model.BookCategories)
        {
            <div class="row">
            <h3>@cat.Categoryname</h3>
          @foreach (var item in Model.AllCategoryBooks)
          {
              if(item.BookCategoryId==cat.Id)
              {
                  <div class="col-md-3">
                      @Html.Partial("~/Views/Shared/BookTemplatePartial.cshtml",item,ViewData)
                  </div>
              }
          }
          </div>              
         }
    </div>
</div>