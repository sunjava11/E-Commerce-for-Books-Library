@model Book_Store.Areas.Admin.Models.OrderViewModel

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>OrderDetail</h4>
	
    <div class="col-md-3">
        <table>
            <tr>
                <th>Customer name</th>
                <td>@Html.DisplayFor(k => k.CustomerInfo.Customername)</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Html.DisplayFor(k => k.CustomerInfo.PhoneNo)</td>
            </tr>
            <tr>
                <th>Shipping Address</th>
                <td>@Html.DisplayFor(k => k.CustomerInfo.ShippingAddress)</td>
            </tr>
        </table>
    </div>
    <div class="col-md-9">
        <div class="col-md-6">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().Book.BookImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().Book.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().BookPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().BookWeight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().Quantity)
                    </th>

                    <th>@Html.DisplayNameFor(model => model.OrderDetails.FirstOrDefault().SubTotal)</th>

                </tr>

                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.BookImageUrl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookWeight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubTotal)
                        </td>

                    </tr>
                }
                <tfoot>
                    <tr>
                        <th colspan="5" align="right">Sub Total</th>
                        <th>@ViewData["SubTotal"]</th>

                    </tr>
                    <tr>
                        <th colspan="5" align="right">Total Weight</th>
                        <th>@ViewData["TotalWeight"]</th>
                    </tr>
                    <tr>
                        <th colspan="5" align="right"> Total Shipping Charges</th>
                        <th>@ViewData["ShippingCharges"]</th>
                    </tr>
                    <tr>
                        <th colspan="5" align="right">Net Total</th>
                        <th>@ViewData["NetTotal"]</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>



    
</div>
<p>   
    @Html.ActionLink("Back to List", "Index")
</p>
